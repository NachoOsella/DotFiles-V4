[[manager.prepend_keymap]]
on  = "y"
run = [ '''
	shell 'for path in "$@"; do echo "file://$path"; done | wl-copy -t text/uri-list' --confirm
''', "yank" ]


[[manager.prepend_keymap]]
on   = "t"
run  = "shell --block --confirm 'ghostty --working-directory $PWD'"
desc = "Open Ghostty in the current directory"
